<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="using:conferenceProgInfSecurity.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="conferenceProgInfSecurity.Views.RegistrationJuriModersScreen"
             x:DataType="vm:RegistrationJuriModersScreenViewModel">

	<Grid Margin="20">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Первый столбец -->
		<StackPanel Grid.Column="0" Spacing="10" Margin="0,0,10,0">
			<TextBlock Text="Регистрация жюри/модератора" FontSize="20" FontWeight="Bold" />

			<!-- Общий Grid для первого столбца -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<!-- Id Number -->
				<TextBox Grid.Column="1" Text="{Binding }" Grid.Row="0" />
				<TextBlock Grid.Column="0" Text="Id Number:" Margin="10" VerticalAlignment="Center" Grid.Row="0" />

				<!-- ФИО -->
				<TextBox Grid.Column="1" Text="{Binding FullName}" Grid.Row="1" />
				<TextBlock Grid.Column="0" Text="ФИО:" Margin="10" VerticalAlignment="Center" Grid.Row="1" />

				<!-- Пол -->
				<ComboBox Grid.Column="1" ItemsSource="{Binding GenderOptions}" SelectedItem="{Binding SelectedGender, Mode=TwoWay}" Grid.Row="2" />
				<TextBlock Grid.Column="0" Text="Пол:" Margin="10" VerticalAlignment="Center" Grid.Row="2" />

				<!-- Роль -->
				<ComboBox Grid.Column="1" ItemsSource="{Binding RoleOptions}" SelectedItem="{Binding SelectedRole, Mode=TwoWay}" Grid.Row="3" />
				<TextBlock Grid.Column="0" Text="Роль:" Margin="10" VerticalAlignment="Center" Grid.Row="3" />

				<!-- Email -->
				<TextBox Grid.Column="1" Text="{Binding Email, Mode=TwoWay}" Grid.Row="4" />
				<TextBlock Grid.Column="0" Text="Email:" Margin="10" VerticalAlignment="Center" Grid.Row="4" />

				<!-- Телефон -->
				<TextBox Grid.Column="1" Text="{Binding Phone, Mode=TwoWay}" Grid.Row="5" />
				<TextBlock Grid.Column="0" Text="Телефон:" Margin="10" VerticalAlignment="Center" Grid.Row="5" />

				<!-- Направление -->
				<ComboBox Grid.Column="1" ItemsSource="{Binding Direction, Mode=TwoWay}" SelectedItem="{Binding }" Grid.Row="6" />
				<TextBlock Grid.Column="0" Text="Направление:" Margin="10" VerticalAlignment="Center" Grid.Row="6" />

				<!-- Прикрепить к мероприятию -->
				<CheckBox Grid.Column="0" Content="Прикрепить к мероприятию" IsChecked="{Binding }" Grid.Row="7" />

				<!-- Мероприятие -->
				<ComboBox Grid.Column="1" ItemsSource="{Binding EventOptions}" SelectedItem="{Binding SelectedEvent, Mode=TwoWay}" Grid.Row="8" />
				<TextBlock Grid.Column="0" Text="Мероприятие:" Margin="10" VerticalAlignment="Center" Grid.Row="8" />
			</Grid>
		</StackPanel>

		<!-- Второй столбец -->
		<StackPanel Grid.Column="1">
			<!-- Общий Grid для второго столбца -->
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<!-- Место под фото с бордером -->
				<Border Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Gray" BorderThickness="1" Width="200" Height="200" Margin="10" Grid.Row="0">
					<!-- Здесь можно добавить элемент для отображения фото, например, Image -->
				</Border>

				<!-- Пароль -->
				<TextBox Grid.Column="1" Text="{Binding Password, Mode=TwoWay}" Width="200" PasswordChar="*" Grid.Row="1" />
				<TextBlock Grid.Column="0" Text="Пароль:" Margin="10" VerticalAlignment="Center" Grid.Row="1" />

				<!-- Повтор пароля -->
				<TextBox Grid.Column="1" Text="{Binding ConfirmPassword, Mode=TwoWay}" Width="200" PasswordChar="*" Grid.Row="2" />
				<TextBlock Grid.Column="0" Text="Повтор пароля:" Margin="10" VerticalAlignment="Center" Grid.Row="2" />

				<!-- Видимый пароль -->
				<CheckBox Grid.Column="1" Content="Видимый пароль" IsChecked="{Binding }" Grid.Row="3" />

				<!-- Кнопки OK и Отмена -->
				<StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10" Grid.Row="4">
					<Button Content="OK" Command="{Binding Register}" />
					<Button Content="Отмена" Command="{Binding }" />
				</StackPanel>
			</Grid>
		</StackPanel>
	</Grid>
</UserControl>